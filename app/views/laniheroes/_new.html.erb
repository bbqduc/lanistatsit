<%= form_for(Lanihero.new, url: laniheroes_path) do |f| %>
    <div class="form-group">
    <%= label_tag "Hero" %>
    <%= f.select(:hero_id, options_from_collection_for_select(Hero.all, :id, :name, 1), :class => "form-control") %>
  </div>
  <div class="form-group">
    <%= label_tag "comment" %>
    <%= f.text_field "comment", class: "form-control span4", placeholder: "Comment" %>
  </div>
  <%= f.submit "Add", class: "btn btn-primary btn-block" %>
<% end %>
