
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>

<h2>Radiant <%= match.radiant_win ? "(Winner)" : "" %></h2>
<table class="table table-bordered">
	<th class="namecell">Player</th>
	<th class="namecell">Hero</th>
	<th>Kills</th>
	<th>Deaths</th>
	<th>Assists</th>
	<th>TFC</th>
	<th>GPM</th>
	<th>Hero Damage</th>
	<th>Tower Damage</th>
<% (0..4).each do |i| %>
	<%= render match.match_participations[i] %>
<% end %>
</table>

<h2>Dire <%= match.radiant_win ? "" : "(Winner)"%></h2>
<table class="table table-bordered">
	<th class="namecell">Player</th>
	<th class="namecell">Hero</th>
	<th>Kills</th>
	<th>Deaths</th>
	<th>Assists</th>
	<th>TFC</th>
	<th>GPM</th>
	<th>Hero Damage</th>
	<th>Tower Damage</th>
<% (5..9).each do |i| %>
	<%= render match.match_participations[i] %>
<% end %>
</table>

<div id="charts">
    <table>
        <tr>
            <td><div id="radiantdamagechart"></div></td>
            <td><div id="diredamagechart"></div></td>
        </tr>
        <tr>
            <td><div id="radianttowerdamagechart"></div></td>
            <td><div id="diretowerdamagechart"></div></td>
        </tr>
        <tr>
            <td><div id="radiantgoldchart"></div></td>
            <td><div id="diregoldchart"></div></td>
        </tr>
    </table>
	<div id="testgoldchart"></div>
	<div id="testindividualchart"></div>
</div>

<h2>Creep score breakdown</h2>
<table class="table table-bordered">
	<th class="namecell">Player</th>
	<th class="namecell">5min</th>
	<th class="namecell">10min</th>
	<th class="namecell">15min</th>
<% @creepscorearray.each do |cs| %>
	<tr>
		<td><%= cs[:player] %></td>
		<% cs[:data].each do |d| %>
			<td><%= d[:lasthits] %>/<%= d[:denies] %></td>
		<% end %>
	</tr>
<% end %>
</table>
